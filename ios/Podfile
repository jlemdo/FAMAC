# ios/Podfile

platform :ios, '16.0'

# Fuentes oficiales de Specs
source 'https://cdn.cocoapods.org/'
source 'https://github.com/CocoaPods/Specs.git'

# Importa el helper de React Native
require_relative '../node_modules/react-native/scripts/react_native_pods'
prepare_react_native_project!

target 'MyNewApp' do
  # Instala los pods de RN autom√°ticos
  config = use_native_modules!

  # Usa react-native-maps desde node_modules para evitar problemas de headers
  pod 'react-native-maps',
    git: 'https://github.com/react-native-maps/react-native-maps.git',
    tag: 'v1.3.2',   # üëà estable, no depende de Fabric
    :modular_headers => true


  # Resto de pods de React Native
  use_react_native!(
    path: config[:reactNativePath],
    app_path: "#{Pod::Config.instance.installation_root}/..",
    new_arch_enabled: false,
    fabric_enabled: false
  )

  # Post install para ajustes finos
  post_install do |installer|
    # 1Ô∏è‚É£ Hook oficial de RN
    react_native_post_install(
      installer,
      config[:reactNativePath],
      mac_catalyst_enabled: false
    )

    # 2Ô∏è‚É£ Workaround Xcode 12.5 / M1
    if installer.respond_to?(:__apply_Xcode_12_5_M1_post_install_workaround)
      installer.__apply_Xcode_12_5_M1_post_install_workaround
    end

    # 3Ô∏è‚É£ Asegura deployment target iOS 16.0 en todos los pods
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      end
    end

    # 4Ô∏è‚É£ Ajustes C++ para react-native-maps
    installer.pods_project.targets
      .select { |t| t.name == 'react-native-maps' }
      .each do |target|
        target.build_configurations.each do |config|
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
          config.build_settings['CLANG_CXX_LIBRARY']           = 'libc++'
        end
      end
  end
end
