require 'xcodeproj'

platform :ios, '16.0'
use_frameworks! :linkage => :static
source 'https://cdn.cocoapods.org/'

require_relative '../node_modules/react-native/scripts/react_native_pods'
prepare_react_native_project!

target 'MyNewApp' do
  config = use_native_modules!

  # Sólo este pod: el Podspec oficial arrastra react-native-maps-generated
  pod 'react-native-maps',
      path: '../node_modules/react-native-maps'

  use_react_native!(
    path: config[:reactNativePath],
    app_path: "#{Pod::Config.instance.installation_root}/..",
    new_arch_enabled: true,
    fabric_enabled: true
  )

  post_install do |installer|
    react_native_post_install(installer, config[:reactNativePath], mac_catalyst_enabled: false)

    # 1) Ajustes en el proyecto de Pods
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |cfg|
        cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        cfg.build_settings['CODE_SIGNING_ALLOWED']       = 'NO'
        cfg.build_settings['ENABLE_BITCODE']             = 'NO'
      end
    end

    # 2) Calcula la ruta a MyNewApp.xcodeproj
    pods_xcproj = installer.pods_project.path                 # …/ios/Pods/Pods.xcodeproj
    ios_folder  = File.dirname(pods_xcproj)                   # …/ios/Pods
    project_root= File.dirname(ios_folder) 
    app_xcodeproj_path = File.join(installer.pods_project.path.dirname.dirname, 'MyNewApp.xcodeproj')                   # …/ios
    app_proj    = Xcodeproj::Project.open(File.join(project_root, 'MyNewApp.xcodeproj'))
    app_target  = app_proj.targets.find { |t| t.name == 'MyNewApp' }

    # 3) Desactiva Swift en ese target
    app_target.build_configurations.each do |cfg|
      cfg.build_settings['SWIFT_EMIT_MODULE']      = 'NO'
      cfg.build_settings['SWIFT_COMPILATION_MODE'] = 'none'
    end

    # 4) (Opcional) Elimina .swift del main_group y del source_build_phase
    group     = app_proj.main_group.find_subpath('MyNewApp', true)
    swift_ref = group.files.find { |f| f.path.end_with?('.swift') }
    group.remove_reference(swift_ref) if swift_ref

    phase = app_target.source_build_phase
    phase.files.each do |bf|
      phase.remove_build_file(bf) if bf.file_ref.path.end_with?('.swift')
    end

    # 5) Asegura AppDelegate.m en Compile Sources
    main_group = app_proj.main_group.find_subpath('MyNewApp', false)
    file_ref   = main_group.find_file_by_path('AppDelegate.m') ||
                 main_group.new_file('MyNewApp/AppDelegate.m')
    unless phase.files_references.any? { |fr| fr.path == 'AppDelegate.m' }
      phase.add_file_reference(file_ref, true)
    end

     embed_phase = app_target.build_phases.find { |bp| bp.display_name == 'Embed Pods Frameworks' }
    if embed_phase
      app_target.build_phases.delete(embed_phase)
      UI.message "✅ Eliminada fase Embed Pods Frameworks"
    end

    # 7) Guarda
    app_proj.save
  end
end
