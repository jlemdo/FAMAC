# ios/Podfile

platform :ios, '16.0'
source 'https://cdn.cocoapods.org/'

require_relative '../node_modules/react-native/scripts/react_native_pods'
prepare_react_native_project!

target 'MyNewApp' do
  # 1️⃣ Autolink de módulos RN
  config = use_native_modules!

  # 2️⃣ Primeramente, el generated pod (codegen)
  pod 'react-native-maps-generated',
      path: '../node_modules/react-native-maps',
      :modular_headers => true

  # 3️⃣ Ahora instala SOLO el subspec “Core” de react-native-maps
  pod 'react-native-maps',
      path: '../node_modules/react-native-maps',
      subspecs: ['Core'],
      :modular_headers => true

  # 4️⃣ El resto de pods autolinked
  use_react_native!(
    path: config[:reactNativePath],
    app_path: "#{Pod::Config.instance.installation_root}/..",
    new_arch_enabled: false,
    fabric_enabled: false
  )

  # 5️⃣ Post-install tweaks
  post_install do |installer|
    react_native_post_install(installer, config[:reactNativePath], mac_catalyst_enabled: false)
    installer.__apply_Xcode_12_5_M1_post_install_workaround if installer.respond_to?(:__apply_Xcode_12_5_M1_post_install_workaround)

    # iOS 16.0 for all pods
    installer.pods_project.targets.each do |t|
      t.build_configurations.each { |cfg| cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0' }
    end

    # C++20 + libc++ for react-native-maps
    installer.pods_project.targets
      .select { |t| t.name == 'react-native-maps' }
      .each do |target|
        target.build_configurations.each do |cfg|
          cfg.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
          cfg.build_settings['CLANG_CXX_LIBRARY']           = 'libc++'
        end
      end
  end
end
