default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight con firma configurada en CI"
  lane :beta do
    ################################################
    # 0️⃣  Inyectar el Team ID en el .xcodeproj
    ################################################
    update_project_team(
      path:    "ios/MyNewApp.xcodeproj",   # ← ruta a tu proyecto
      targets: ["MyNewApp"],                # ← array con tu target principal
      teamid:  ENV["DEVELOPMENT_TEAM"]      # ← tu Team ID desde GitHub Secrets
    )

    ################################################
    # 1️⃣  Configurar firma automática (Automatic Signing)
    ################################################
    update_code_signing_settings(
      use_automatic_signing: true,
      path:                  "ios/MyNewApp.xcodeproj",
      team_id:               ENV["DEVELOPMENT_TEAM"]
    )

    ################################################
    # 2️⃣  Descargar certificados y perfiles con Match
    ################################################
    api_key = app_store_connect_api_key(
      key_id:      ENV['APP_STORE_CONNECT_API_KEY_KEY_ID'],
      issuer_id:   ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_API_KEY_CONTENT'].gsub("\\n", "\n")
    )
    match(type: "appstore", api_key: api_key, readonly: true)

    ################################################
    # 3️⃣  Compilar y archivar
    ################################################
    build_app(
      workspace:      "ios/MyNewApp.xcworkspace",
      scheme:         "MyNewApp",
      export_method:  "app-store",
      clean:          true,
      export_team_id: ENV["DEVELOPMENT_TEAM"],
      export_options: {
        provisioningProfiles: {
          "com.occr.productos" => "match AppStore com.occr.productos"
        }
      }
    )

    ################################################
    # 4️⃣  Subir la build a TestFlight
    ################################################
    upload_to_testflight(api_key: api_key)
  end
end
