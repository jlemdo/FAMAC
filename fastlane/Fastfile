default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight with automatic code signing"
  lane :beta do
    ################################################
    # 0️⃣  Ajusta el proyecto para usar el team id #
    ################################################
    update_project_team(
      xcodeproj: "ios/MyNewApp.xcodeproj",   # path a tu proyecto
      target:    "MyNewApp",                 # nombre de tu target
      teamid:    ENV["DEVELOPMENT_TEAM"]     # inyecta el secret
    )

    ##########################################################
    # 1️⃣  Ajusta estilo de firma y provisioning en el proyecto
    ##########################################################
    update_code_signing_settings(
      project:                        "ios/MyNewApp.xcodeproj",
      target:                         "MyNewApp",
      build_configuration:            "Release",  # o también Debug si lo necesitas
      code_signing_identity:          "iPhone Distribution",
      development_team:               ENV["DEVELOPMENT_TEAM"],
      provisioning_profile_specifier: "match AppStore com.occr.productos"
    )

    ################################################
    # 2️⃣  Descarga certificados y profiles con Match
    ################################################
    api_key = app_store_connect_api_key(
      key_id:      ENV['APP_STORE_CONNECT_API_KEY_KEY_ID'],
      issuer_id:   ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_API_KEY_CONTENT'].gsub("\\n", "\n")
    )

    match(
      type:    "appstore",
      api_key: api_key,
      readonly: true
    )

    ##############################################
    # 3️⃣  Compila y archiva la app (archive)
    ##############################################
    build_app(
      workspace:      "ios/MyNewApp.xcworkspace",
      scheme:         "MyNewApp",
      export_method:  "app-store",
      clean:          true,
      export_team_id: ENV["DEVELOPMENT_TEAM"],
      export_options: {
        provisioningProfiles: {
          "com.occr.productos" => "match AppStore com.occr.productos"
        }
      }
    )

    ##############################################
    # 4️⃣  Sube la build a TestFlight
    ##############################################
    upload_to_testflight(api_key: api_key)
  end
end
